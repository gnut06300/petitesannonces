{% extends 'base.html.twig' %}

{% block title %}Gérer les Catégories{% endblock %}

{% block body %}
	<h1>Gérer les Catégories</h1>
	<a href="{{ path("admin_categories_ajout") }}" class="btn press shadow-1 rounded-1 blue">Ajouter une catégorie</a>
	<div class="responsive-table">
	  <table class="table striped">
	    <thead>
	      <tr>
	        <th>ID</th>
	        <th>Nom</th>
	        <th>Parent</th>
	        <th>Actions</th>
	      </tr>
	    </thead>
	    <tbody>
	    {% for categorie in categories %}
			<tr>
		        <td>{{ categorie.id }}</td>
		        <td>{{ categorie.name}}</td>
		        <td>{{ categorie.parent }}</td>
		        <td class="text-center">
		      		<a href="{{ path("admin_categories_modifier",{id:categorie.id}) }}" class="btn press shadow-1 rounded-1 blue">Modifier</a>
		      	</td>
		      </tr>
	    {% endfor %}
	    </tbody>
	  </table>
	</div>
	{#{{ dump(categories)}#}
{% endblock %}
